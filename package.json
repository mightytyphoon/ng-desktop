{
  "name": "ng-desktop-app",
  "version": "1.0.0",
  "description": "a quick start project for a angular desktop app",
  "main": "http://localhost:8000",
  "node-remote": "http://localhost:8000",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "preinstall": "cd desktop-app && npm i",
    "dev:build": "cd desktop-app && ng build --watch --output-path=../dist --base-href=.",
    "dev:serve": "lite-server -c lite-server-config.json",
    "dev:start": "nw .",
    "ng:serve": "ng serve --port=8000",
    "build:prod": "node build.js",
    "build:package": "echo build package"
  },
  "window": {
    "single-instance": false
  },
  "author": "Laurent Boukhadcha",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^12.0.0",
    "nw": "^0.38.2"
  }
}
